
#-- opts
set afterends
set autoindent
set backup
set backupdir "/usr/local/var/nano/backups"
set boldtext
set constantshow
set historylog
set linenumbers
set nowrap
set positionlog
set regexp
set smooth
set tabsize 4
set tabstospaces


#-- colors
set titlecolor brightyellow,magenta
set statuscolor brightblack
set errorcolor brightwhite,red
set selectedcolor black,cyan
set numbercolor brightblack
set keycolor yellow
set functioncolor green


#-- syntax
include "/usr/share/nano/*.nanorc"
